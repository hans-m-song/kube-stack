{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "charset": "utf8",
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "@/*": ["imports/*"], "~/*": ["src/*"] }
  },
  "include": ["src/**/*.ts", "imports/**/*.ts"]
}
